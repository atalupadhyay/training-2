@using System.Web.Mvc
@model Komsky.Web.Models.AccessViewModel
@{
    ViewBag.Title = "Site Security";
    Layout = MVC.Shared.Views._LayoutMinimum;
}
<main id="main" role="main">
    <div class="container">

        <h2>@ViewBag.Title.</h2>
        <div class="row">
            <div class="col-md-12">
                <section id="siteAccess">

                    <h4>Please enter authorization details before accessing the portal.</h4>
                    <hr />


                    @using (Html.BeginForm(MVC.Account.Access(), FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Authorize" class="btn btn-primary" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>

    </div>
</main>