@{
    ViewBag.HeaderPresent = true;
}

<header>
    <div class="header-content">
        <div class="header-content-inner">
            <h1>@AppSettings.Komsky_FullApplicationName</h1>
            <hr>
            <p>Komsky Inc internal ticketing system for customer products. Have any issues with a product? Just create ticket!</p>
            <a href="#about" class="btn btn-primary btn-xl page-scroll">@Komsky.Web.Views.Home.Index.FindOutMore</a>
        </div>
    </div>
</header>
<section class="bg-primary" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">We've got what you need!</h2>
                <hr class="light">
                <div id="tickets" />
                <a href="#" class="btn btn-default btn-xl">Get Started!</a>
            </div>
        </div>
    </div>
</section>
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">At Your Service</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-html5 wow bounceIn text-primary"></i>
                    <h3>Client side UI</h3>
                    <p class="text-muted">HTML5, CSS3, Bootstrap. AJAX with well designed JavaScript.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-database wow bounceIn text-primary" data-wow-delay=".1s"></i>
                    <h3>Entity Framework</h3>
                    <p class="text-muted">Modern ORM with code-first approach. Plus code migrations!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-file-code-o wow bounceIn text-primary" data-wow-delay=".2s"></i>
                    <h3>.NET ? At your service.</h3>
                    <p class="text-muted">Project layering, dependency injection with ninject, unit test dependency mocking with moq.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-code-fork wow bounceIn text-primary" data-wow-delay=".3s"></i>
                    <h3>Made with <del>Love</del> Patterns</h3>
                    <p class="text-muted">Unit of work, repository, factory just to begin with.<p>
                </div>
            </div>
        </div>
    </div>
</section>

<aside class="bg-dark">
    <div class="container text-center">
        <div class="call-to-action">
            <h2>Free Download at GitHub</h2>
            <a href="https://github.com/komsky/training" class="btn btn-default btn-xl wow tada"><i class="fa fa-code-fork pull-left"></i> Fork Now!</a>
        </div>
    </div>
</aside>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading">Let's Get In Touch!</h2>
                <hr class="primary">
                <p>Ready to start your next project with me? That's great! You can find me on social services below.</p>
            </div>
            <div class="col-lg-4 col-lg-offset-2 text-center">
                <i class="fa fa-linkedin-square fa-3x wow bounceIn"></i>
                <p><a href="https://uk.linkedin.com/in/ailewicz">https://uk.linkedin.com/in/ailewicz</a></p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fa fa-stack-overflow fa-3x wow bounceIn" data-wow-delay=".1s"></i>
                <p><a href="stackoverflow.com/users/1647464/komsky">stackoverflow.com/users/1647464/komsky</a></p>
            </div>
        </div>
    </div>
</section>