@model Komsky.Web.Models.TicketViewModel

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AgentReply)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AgentReply)
        </dd>

        <dt>
            Owner's name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner.UserName)
        </dd>

        <dt>
            Agent's name
        </dt>
        <dd>
            @if (Model.AssignedAgent == null)
            {
                <i>not yet assigned</i>
            }
            else
            {
                @Html.DisplayFor(model => model.AssignedAgent.UserName)
            }
        </dd>
    </dl>
</div>
<div class="text-center">
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
    </p>
</div>
