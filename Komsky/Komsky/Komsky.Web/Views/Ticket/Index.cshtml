@model IEnumerable<Komsky.Web.Models.TicketViewModel>

@{
    if (ViewBag.Title == null) { ViewBag.Title = "Index"; }
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-lg-7">
        
        <span>@ViewBag.Message</span>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
    <div class="col-lg-5">
        <input type="text" id="searchfield" class="form-control pull-left" placeholder="Search for tickets..."/>
        <button id="searchbutton" class="btn btn-default pull-right">Search <i class="fa fa-search"></i></button>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AgentReply)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedAgentId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgentReply)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedAgentId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
